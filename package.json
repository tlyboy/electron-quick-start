{
  "name": "electron-start-app",
  "version": "1.0.0",
  "description": "electron-start-app 是一个简单的 Electron 入门项目",
  "license": "MIT",
  "author": "Guany",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -p always"
  },
  "dependencies": {
    "electron-updater": "^5.0.1"
  },
  "devDependencies": {
    "electron": "^18.2.4",
    "electron-builder": "^23.0.3"
  },
  "build": {
    "appId": "com.tlyboy.start",
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": false,
      "shortcutName": "Electron 快速上手"
    },
    "publish": [
      "github"
    ]
  },
  "productName": "Electron 快速上手"
}
